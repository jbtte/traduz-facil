
<div class="container">
  <div class="show-content d-flex">
    <div class="job-info col-6">
      <div class="card-livro">
        <img src="https://picsum.photos/id/24/200/300" />
        <div class="card-trip-infos">
          <div>
            <h4>Serviço de tradução</h4>
            <h2><%= @job.content %></h2>
          </div>
        </div>
      </div>
    </div>
    <div class="proposals-info col-6">
      <div class="card card-proposal-show card-livro">
        <h3 class="mt-2 pb-2">Propostas para essa tradução</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Usuário</th>
              <th scope="col">Preço</th>
              <th scope="col">Prazo</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <% @proposals.each_with_index do |proposal| %>
              <% if proposal.status == 'Aceito' %>
                <tr class='table-success'>
              <% elsif proposal.status == 'Rejeitado'%>
                <tr class='table-danger'>
              <% else %>
                <tr>
              <% end %>
              <th scope="row" class=<%= "#{proposal.status}-status"%>><i class="fas fa-circle"></i></th>
              <td><%= User.find(proposal.user_id).username %></td>
              <td>R$<%= proposal.price %></td>
              <td><%= proposal.deadline.strftime("%d.%m.%Y") %></td>
              <td>
                <% proposal.status = "pending" if proposal.status.nil? %>
                <% if proposal.status.capitalize == "accepted" %>
                  <% proposta="Aceito" %>
                <% elsif proposal.status.capitalize == "rejected" %>
                  <% proposta = "Rejeitado" %> 
                <% else %>
                  <% proposta = "Pendente"  %>
                <% end %>
                <% if proposal.job.user.username == current_user.username %>
                  <%= link_to proposta, edit_job_proposal_path(@job, proposal) %>
                <% else %>
                  <%= proposta %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

