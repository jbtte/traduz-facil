<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <h5><%= image_tag "logo-traduz-simples.png" %> <span class="title">traduz fácil</span></h5>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li>
        <form class="form-inline my-2 my-lg-0" hidden>
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-green my-2 my-sm-0" type="submit">Search</button>
        </form>
      </li>
      <li class="nav-item dropdown ml-2">
        <% if current_user && current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "person-placeholder.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user %>
            <%= link_to "Minha página", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Demandar uma tradução", new_job_path, class: "dropdown-item" %>
            <%= link_to "Procurar por serviços", jobs_path, class: "dropdown-item" %>
            <%= link_to "Editar meu Perfil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Entrar na conta", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Criar uma conta", new_user_registration_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
