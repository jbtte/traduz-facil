<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Description</th>
      <th scope="col">Number of proposals</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.each do |job| %>
      <tr>
      <th scope="row" class=""><i class="fas fa-circle"></i></th>
      <td><%= job.content %></td>
      <td><%= link_to Proposal.where(job_id: job.id).count, job_path(job) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
