<div class="row justify-content-center">
  <div class="col-md-12  col-lg-8 col-xl-6 m-4">
    <h2>Editar meu perfil</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :skill,
                    label: "Idioma",
                    hint: "Qual/quais sua(s) especialidade(s) de tradução?",
                    input_html: { autocomplete: "current-skill" } %>                 
        <%= f.input :username,
                    required: true,
                    input_html: { autocomplete: "current-username" } %>
        <%= f.input :first_name,
                    label: "Nome",
                    input_html: { autocomplete: "current-first_name" } %>
        <%= f.input :last_name,
                    label: "Sobrenome",
                    input_html: { autocomplete: "current-last_name" } %>
        <%= f.input :photo,
                    hint: "Insira uma foto ou imagem que te identifique!",
                    as: :file %>
        

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    label: "Nova senha",
                    hint: "Deixe em branco se não quiser alterar",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirme a nova senha",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    label: "Senha atual",
                    hint: "A senha atual é necessária para efetuar as alterações",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
    <p>
    </p>

    <p>Quer remover seu cadastro? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

    <%= link_to "Voltar", :back %>
  </div>
</div>
