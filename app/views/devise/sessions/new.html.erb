<div class="login-page">
    <div class="row pt-5">
      <div class="justify-content-center card card-login mx-auto">
        <div class=" m-4">
          <h2>Entrar na conta</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" } %>
            <%= f.input :password,
            label: "Senha",
            required: false,
            input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: "Lembre-se de mim", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-green" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
